<local:FrmODBase x:Class="OpenDental.FrmFaqEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:OpenDental"
             xmlns:ui="clr-namespace:WpfControls.UI"
             mc:Ignorable="d"
             Width="1184" Height="696" 
             Text="FAQ Edit" >
    <Grid Background="#FFFCFDFE" >
        <ui:Label x:Name="label2" Width="100" Height="14" Margin="716,22,0,0" Text="Preview" VAlign="Center" />
        <ui:WebBrowser x:Name="webPreview" Width="453" Height="579" Margin="719,41,0,0" />
