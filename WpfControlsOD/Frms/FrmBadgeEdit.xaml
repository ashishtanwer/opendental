<local:FrmODBase x:Class="OpenDental.FrmBadgeEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:OpenDental"
             xmlns:ui="clr-namespace:WpfControls.UI"
             mc:Ignorable="d"
             Width="300" Height="120" 
             Text="Edit Badge ID" MinMaxBoxes="False" >
	<Grid Background="#FFFCFDFE" >
		<ui:Label x:Name="labelBadgeID" Width="86" Height="18" Margin="10,49,0,0" Text="Badge ID" HAlign="Right" VAlign="Center" />
		<ui:Label x:Name="labelUserName" Width="88" Height="18" Margin="10,23,0,0" Text="Username" HAlign="Right" VAlign="Center" />
		<ui:TextBox x:Name="textBadgeID" Width="58" Height="20" Margin="98,48,0,0" TabIndexOD="0" />
		<ui:TextBox x:Name="textUserName" Width="145" Height="20" Margin="98,21,0,0" TabIndexOD="2" ReadOnly="True" ColorBack="#FFF0F0F0" />
		<ui:Button x:Name="butSave" HorizontalAlignment="Right" Width="75" VerticalAlignment="Bottom" Height="26" Margin="0,0,10,10" Text="_Save" Click="butSave_Click" />
		<ui:Label x:Name="labelBadgeInstructions" Width="103" Height="18" Margin="156,49,0,0" Text="8 digits or less" VAlign="Center" />
	</Grid>
</local:FrmODBase>