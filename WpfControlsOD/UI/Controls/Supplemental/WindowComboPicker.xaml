<Window x:Class="WpfControls.UI.WindowComboPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControls.UI"
        mc:Ignorable="d"
        Title="WindowComboPicker" Height="450" Width="150" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" WindowStartupLocation="Manual">
	<Border Background="White" BorderThickness="1" BorderBrush="DarkGray">
		<ScrollViewer Name="scrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Focusable="False">
			<StackPanel Name="stackPanel" Focusable="True" LostKeyboardFocus="stackPanel_LostKeyboardFocus" VerticalAlignment="Top">
			</StackPanel>
		</ScrollViewer>
	</Border>
</Window>
